<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="wyuen.kitchen_pantry">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".AddIngredientActivity" />
        <activity android:name=".FilterIngredientActivity" />
        <activity android:name=".AddRecipeActivity" />
        <activity
            android:name=".IngredientDisplayActivity"
            android:label="@string/title_activity_ingredient_display"
            android:theme="@style/AppTheme" />
        <activity
            android:name=".RecipeDisplayActivity"
            android:label="@string/title_activity_recipe_display"
            android:theme="@style/AppTheme"></activity>
    </application>

</manifest>