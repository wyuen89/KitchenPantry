<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="wyuen.kitchen_pantry.AddIngredientActivity">

    <RelativeLayout
        android:id="@+id/ingredient_input"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true">

        <TextView
            android:id="@+id/ingredient_name_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Ingredient Name:"/>

        <EditText
            android:id = "@+id/ingredient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredient_name_text"/>

        <TextView
            android:id = "@+id/ingredient_type_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text = "Ingredient Type:"
            android:layout_below="@id/ingredient_name"/>

        <EditText
            android:id="@+id/ingredient_type"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/ingredient_type_text"/>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/ingredient_input"
        android:layout_centerHorizontal="true">


        <Button
            android:id="@+id/ingredient_back"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="back"/>

        <Button
            android:id="@+id/ingredient_add"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:text="add"
            android:layout_toRightOf="@id/ingredient_back"/>
    </RelativeLayout>



</RelativeLayout>
